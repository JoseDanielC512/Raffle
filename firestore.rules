rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para la colección 'users'
    match /users/{userId} {
      // Un usuario solo puede leer y escribir su propio documento de usuario.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Reglas para la colección 'raffles'
    match /raffles/{raffleId} {

      // LECTURA (GET): Cualquier persona (autenticada o no) puede leer una rifa específica para la vista pública.
      allow get: if true;

      // LECTURA (LIST): Cualquier usuario autenticado puede realizar consultas de lista.
      // La seguridad para que un usuario solo vea sus propias rifas se aplica en la consulta del cliente.
      allow list: if request.auth != null;

      // CREACIÓN (CREATE): Un usuario autenticado puede crear una rifa.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      // ACTUALIZACIÓN/BORRADO (UPDATE, DELETE): Solo el propietario puede actualizar o borrar su rifa.
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;

      // Reglas para la subcolección 'slots'
      match /slots/{slotId} {
        
        // LECTURA (READ): Cualquier persona (autenticada o no) puede leer los slots de una rifa para la vista pública.
        allow read: if true;

        // ESCRITURA (WRITE): Solo el propietario de la rifa puede escribir en los slots.
        allow write: if request.auth != null && get(/databases/$(database)/documents/raffles/$(raffleId)).data.ownerId == request.auth.uid;
      }

      // Reglas para la subcolección 'activity'
      match /activity/{activityId} {
        // LECTURA (READ): Cualquier persona puede leer el historial de actividades.
        // Esto es seguro ya que los datos de la actividad no son sensibles y permite
        // que las consultas 'list' en la colección 'raffles' funcionen correctamente.
        allow read: if true;

        // ESCRITURA (WRITE): Solo el propietario de la rifa puede escribir en el historial de actividades.
        allow write: if request.auth != null && get(/databases/$(database)/documents/raffles/$(raffleId)).data.ownerId == request.auth.uid;
      }
    }
  }
}
